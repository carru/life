{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}